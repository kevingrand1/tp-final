doctype html
html
    head
        title #{title}
    body
        h1 Clients
        table
            thead
                tr
                    th Nom
                    th Prénom
                    th Age 
                    th Email
                    th Telephone
                    th Actions

            tbody
                each client in clients
                    tr
                        td #{client.nom}
                        td #{client.prenom}
                        td #{client.age}
                        td #{client.email}
                        td #{client.telephone}
                        td 
                            form(action="/clients/delete/#{client.id}" method="post")
                                input(type="hidden" name="_method" value="delete")
                                button(type="submit") Supprimer

                            form(action="/clients/update/#{client.id}/edit" method="get")
                                button(type="submit") Modifier


        h2 Ajouter un nouveau client

        form(action="/clients", method="post")
            label(for='nom') Nom
            input#nom(type='text' name='nom' required)

            label(for='prenom') Prénom
            input#prenom(type='text' name='prenom' required)

            label(for='age') Age
            input#prenom(type='number' name='age' required)

            label(for='email') Email
            input#prenom(type='text' name='email' required)

            label(for='telephone') Telephone
            input#prenom(type='text' name='telephone' required)

            button(type="submit") Ajouter